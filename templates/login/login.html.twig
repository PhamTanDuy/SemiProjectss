{% extends 'base.html.twig' %}

{% block title %} {{ parent ()}} {% endblock %}

{% block body %}
    <style>
        div.c {
            background: slategray;
            color: cyan;
            text-align: center;
        }
    </style>
    <div id="mainer" class="mainer">
        <div class="container-fluid container-max-width-xl">
            <div class="mt-4 justify-content-between line-b-f">
                <div class="c">
                    <h4>PLEASE LOGIN</h4>
                </div>
                <div class="container">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="mt-4 d-flex login">
                        <form action="{{ path('app_login') }}" method="post">
                            <label for="username">Email:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                            <label for="password">Password:</label>
                            <input type="password" id="password" name="_password"/>

                            {#<label>
                                <input type="checkbox" name="_remember_me" checked/>
                                Keep me logged in
                            </label>#}

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <input type="hidden" name="go_to" value="{{ path('water_list') }}"/>
                            <input type="hidden" name="back_to" value="{{ path('app_login') }}"/>

                            {# If you want to control the URL the user is redirected to on success
                            <input type="hidden" name="_target_path" value="/account"/> #}

                            <button type="submit" class="btn-primary">login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {#    </div>#}
{% endblock %}